<Window x:Class="ThreatModelingApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:ThreatModelingApp.ViewModels"
        xmlns:views="clr-namespace:ThreatModelingApp.Views"
        Title="ThreatModelingApp" Height="500" Width="800"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <!-- Шаблоны View для соответствующих ViewModel -->
    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:QuestionnaireViewModel}">
            <views:QuestionnaireView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ThreatsListViewModel}">
            <views:ThreatsListView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:UpdateViewModel}">
            <views:UpdateView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SettingsViewModel}">
            <views:SettingsView />
        </DataTemplate>
    </Window.Resources>

    <DockPanel>
        <!-- Меню слева -->
        <!-- Меню слева -->
        <StackPanel DockPanel.Dock="Left" Width="180" Background="#EEE" Margin="10">
            <Button Content="Начать анкетирование" Command="{Binding StartQuestionnaireCommand}" Margin="0,5"/>
            <Button Content="Актуальные угрозы" Command="{Binding ShowThreatsCommand}" IsEnabled="{Binding IsSurveyComplete}" Margin="0,5"/>
            <Button Content="Обновить базу" Command="{Binding UpdateDatabaseCommand}" Margin="0,5"/>
            <Button Content="Настройки" Command="{Binding ShowSettingsCommand}" Margin="0,5"/>
        </StackPanel>
        <!-- Центральный контент, сюда подставляется активная ViewModel -->
        <ContentControl Content="{Binding CurrentViewModel}" Margin="10" />
    </DockPanel>
</Window>
