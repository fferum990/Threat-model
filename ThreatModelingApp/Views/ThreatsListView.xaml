<UserControl x:Class="ThreatModelingApp.Views.ThreatsListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Актуальные угрозы" FontSize="20" FontWeight="Bold" Margin="0 0 0 10"/>
            <ItemsControl ItemsSource="{Binding RelevantThreats}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" Margin="5"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </Grid>
</UserControl>
