<UserControl x:Class="ThreatModelingApp.Views.UpdateView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:ThreatModelingApp.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             FontFamily="Segoe UI"
             Background="White">

    <UserControl.DataContext>
        <vm:UpdateViewModel />
    </UserControl.DataContext>

    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="40"/>
            <!-- фиксированная высота для строки с надписью -->
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок сверху -->
        <TextBlock Grid.Row="0"
           Text="Обновление базы угроз"
           FontSize="20"
           FontWeight="Bold"
           Margin="0 0 0 8"
           Foreground="#2C2C2C"
           HorizontalAlignment="Center" />

        <!-- Статус ниже заголовка -->
        <Grid Grid.Row="1" Height="50">
            <!-- контейнер с фиксированной высотой -->
            <TextBlock Text="{Binding StatusMessage}"
               FontSize="14"
               FontWeight="SemiBold"
               Foreground="#444"
               TextWrapping="Wrap"
               Width="416" VerticalAlignment="Center" Margin="187,0,0,29" HorizontalAlignment="Left"/>
        </Grid>

        <!-- Список угроз в середине -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Threats}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#F9F9F9" Padding="12" Margin="6,4"
                                CornerRadius="8"
                                BorderBrush="#CCC" BorderThickness="1">
                            <StackPanel>
                                <DockPanel LastChildFill="True">
                                    <TextBlock Text="{Binding ID}" 
                                               FontWeight="Bold" 
                                               FontSize="13" 
                                               Foreground="#555"
                                               Width="40"/>
                                    <TextBlock Text="{Binding Name}" 
                                               FontWeight="Bold" 
                                               FontSize="16" 
                                               Foreground="#222"
                                               TextWrapping="Wrap"
                                               Margin="10,0,0,0" />
                                </DockPanel>
                                <TextBlock Text="{Binding Description}" 
                                           FontSize="13" 
                                           TextWrapping="Wrap" 
                                           Foreground="#666"
                                           Margin="18,6,0,0"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Кнопка обновления снизу -->
        <StackPanel Grid.Row="3" HorizontalAlignment="Center" Margin="0,15,0,0">

            <Button Content="Обновить базу угроз"
                    Command="{Binding DownloadThreatsCommand}"
                    Background="#3B5998"
                    Foreground="White"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Padding="10"
                    Width="220"
                    Height="45"
                    Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="8">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"
                                                          Margin="{TemplateBinding Padding}" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Resources>
            </Button>

        </StackPanel>

    </Grid>
</UserControl>
