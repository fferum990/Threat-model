<UserControl x:Class="ThreatModelingApp.Views.UpdateView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:ThreatModelingApp.ViewModels">

    <UserControl.DataContext>
        <vm:UpdateViewModel />
    </UserControl.DataContext>

    <StackPanel Margin="20" >
        <Button Content="Обновить базу угроз" Command="{Binding DownloadThreatsCommand}" Width="200" Height="40" Margin="0,0,0,10"/>
        <TextBlock Text="{Binding StatusMessage}" FontWeight="Bold" Margin="0,0,0,10"/>
        <ListBox ItemsSource="{Binding Threats}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding ID}" FontWeight="Bold"/>
                        <TextBlock Text="{Binding Name}" TextWrapping="Wrap" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </StackPanel>
</UserControl>
